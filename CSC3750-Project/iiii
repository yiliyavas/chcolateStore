<!DOCTYPE html>
<html>
<head>
  <title>User Input with Scrolling Options</title>
<!-- (powershell -command "Get-Clipboard | Sort-Object | Get-Unique | Set-Clipboard")-->
  <script>
    function loadOptions() {
      var xhr = new XMLHttpRequest();
      xhr.open('GET', 'options.txt', true);

      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4 && xhr.status === 200) {
          var data = xhr.responseText;
          var options = data.split('\n');
          var select = document.getElementById('optionsSelect');

          options.forEach(option => {
            var optionElement = document.createElement('option');
            optionElement.textContent = option;
            select.appendChild(optionElement);
          });
        }
      };

      xhr.send();
    }

    function processInput() {
      var selectedOption = document.getElementById('optionsSelect').value;
      console.log('Selected option:', selectedOption);

      // Perform further processing with the selected option
      // ...
    }
  </script>
</head>
<body onload="loadOptions()">
  <h1>User Input with Scrolling Options</h1>
  
  <form>
    <label for="optionsSelect">Select an option:</label>
    <select id="optionsSelect"></select>
    <br>
    <button type="button" onclick="processInput()">Submit</button>
  </form>
</body>
</html>
