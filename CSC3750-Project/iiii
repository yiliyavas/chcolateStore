function readTextFile(file, callback) {
  var reader = new FileReader();

  reader.onload = function(event) {
    var contents = event.target.result;
    var lines = contents.split('\n');

    // Remove any empty lines
    lines = lines.filter(line => line.trim() !== '');

    // Call the callback function with the array of lines
    callback(lines);
  };

  reader.readAsText(file);
}

// Usage example
var fileInput = document.getElementById('fileInput'); // Assuming you have an input element of type "file" with id "fileInput"

fileInput.addEventListener('change', function(event) {
  var file = event.target.files[0];

  readTextFile(file, function(lines) {
    console.log(lines);
    // Use the lines array here
  });
});
