<!DOCTYPE html>
<html>
<head>
    <title>Excel Search</title>
    <script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
    <script>
        function searchExcel() {
            var userInput = document.getElementById("searchInput").value;
            
            var fileInput = document.getElementById("fileInput");
            var file = fileInput.files[0];
            var reader = new FileReader();
            
            reader.onload = function(e) {
                var data = new Uint8Array(e.target.result);
                var workbook = XLSX.read(data, { type: 'array' });
                
                var worksheet = workbook.Sheets[workbook.SheetNames[0]];
                var jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                
                var searchResult = '';
                for (var i = 0; i < jsonData.length; i++) {
                    if (jsonData[i][0] == userInput) {
                        searchResult = jsonData[i];
                        break;
                    }
                }
                
                var result = document.getElementById("result");
                if (searchResult !== '') {
                    result.innerHTML = searchResult.join(' -> ');
                } else {
                    result.innerHTML = 'No matching result found.';
                }
            };
            
            reader.readAsArrayBuffer(file);
        }
    </script>
</head>
<body>
    <h1>Excel Search</h1>
    <form onsubmit="event.preventDefault(); searchExcel();">
        <label for="searchInput">Search:</label>
        <input type="text" id="searchInput" required>
        <input type="file" id="fileInput" required>
        <button type="submit">Search</button>
    </form>
    <div id="result"></div>
</body>
</html>
