<!DOCTYPE html>
<html>
<head>
    <title>Dynamic Option Display</title>
    <script>
        function showOptions() {
            var selectElement = document.getElementById("menu");
            var optionValue = selectElement.value;
            
            var additionalOptionsContainer = document.getElementById("additionalOptionsContainer");
            
            if (optionValue === "Option 1") {
                additionalOptionsContainer.innerHTML = `
                    <p>Additional options for Option 1:</p>
                    <select id="subMenu" onchange="showSubOptions();">
                        <option value="">Select an option</option>
                        <option value="Option 1A">Option 1A</option>
                        <option value="Option 1B">Option 1B</option>
                        <option value="Option 1C">Option 1C</option>
                    </select>
                    <div id="subOptionsContainer"></div>
                `;
            } else {
                additionalOptionsContainer.innerHTML = '';
            }
        }
        
        function showSubOptions() {
            var selectElement = document.getElementById("subMenu");
            var optionValue = selectElement.value;
            
            var subOptionsContainer = document.getElementById("subOptionsContainer");
            
            if (optionValue === "Option 1A") {
                subOptionsContainer.innerHTML = `
                    <p>Additional options for Option 1A:</p>
                    <select>
                        <option value="SubOption 1A1">SubOption 1A1</option>
                        <option value="SubOption 1A2">SubOption 1A2</option>
                        <option value="SubOption 1A3">SubOption 1A3</option>
                    </select>
                    <!-- Add more sub-options here -->
                `;
            } else {
                subOptionsContainer.innerHTML = '';
            }
        }
        
        function writeToElement(elementId) {
            var element = document.getElementById(elementId);
            if (element) {
                var selectedValue = document.getElementById("menu").value;
                element.innerHTML = selectedValue;
            } else {
                console.error("Element with ID " + elementId + " not found.");
            }
        }
    </script>
</head>
<body>
    <select id="menu" onchange="showOptions(); writeToElement('output')">
        <option value="Option 1">Option 1</option>
        <option value="Option 2">Option 2</option>
        <option value="Option 3">Option 3</option>
    </select>
    
    <div id="additionalOptionsContainer"></div>
    
    <div id="output"></div>
</body>
</html>
